generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int @default(autoincrement())
  name    String
  email   String @unique
  isAdmin Boolean
  Post    Post[]
}

model Post{
  id       Int @default(autoincrement())
  title    String
  content  String
  authorId Int
  author   User @relation(fields: [authorId], references: [id])
  authorId Int
}