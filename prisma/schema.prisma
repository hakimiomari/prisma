generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String @default(uuid()) @unique
  name    String
  email   String @unique
  isAdmin Boolean
  posts    Post[]
}

model Post{
  id       String @default(uuid()) @unique
  title    String 
  content  String
  author   User @relation(fields: [authorId], references: [id])
  authorId String
}